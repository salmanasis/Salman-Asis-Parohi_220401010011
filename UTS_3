#include <iostream>

using namespace std;

int main()
{
    int input;
    char kembali;
    
    do{
    cout << "Masukan angka : ";
    cin >> input;
    cout << endl;
    
    if (input == 0)
    {
        cout << input << " adalah bilangan nol" << endl; 
    }
    else if (input %input == 0 && input >= 0 && input %2 == 1 && input > 1)
    {
        cout << input << " adalah bilangan prima dan ganjil positif" << endl;
    }
    else if (input == 2)
    {
        cout << input << " adalah bilangan prima dan genap positif" << endl;
    }
    else if (input %2 == 0 && input >= 0)
    {
        cout << input << " adalah bilangan genap positif" << endl;
    }
    else if (input %2 == 0 && input <= 0)
    {
        cout << input << " adalah bilangan genap negatif" << endl;
    }
    else if (input %2 != 0 && input >= 0)
    {
        cout << input << " adalah bilangan ganjil positif" << endl;
    }
    else if (input %2 != 0 && input <= 0)
    {
        cout << input << " adalah bilangan ganjil negatif" << endl;
    }
    
    cout << endl;
    cout << "Apakah anda akan mengulang? (y/n)";
    cin >> kembali;
    cout << endl;
    }
    
    while (kembali != 'n');
        cout << "Terima Kasih\n";
        
    return 0;   
}
